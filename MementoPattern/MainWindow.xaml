<Window x:Class="MementoPattern.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MementoPattern"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Login:" Margin="0,0,0,5"/>
        <TextBox Name="LoginTextBox" Margin="0,0,0,10" />

        <TextBlock Text="Email:" Margin="0,0,0,5"/>
        <TextBox Name="EmailTextBox" Margin="0,0,0,10" />

        <TextBlock Text="Theme:" Margin="0,0,0,5"/>
        <ComboBox Name="ThemeComboBox" Margin="0,0,0,10" SelectedIndex="0">
            <ComboBoxItem Content="Light" />
            <ComboBoxItem Content="Dark" />
        </ComboBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Name="SaveButton" Content="Save" Width="80" Margin="5" Click="SaveButton_Click"/>
            <Button Name="LoadButton" Content="Load" Width="80" Margin="5" Click="LoadButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
