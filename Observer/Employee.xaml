<Window x:Class="Observer.Employee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Observer"
        mc:Ignorable="d"
        Title="EmployeeWindow" Height="160" Width="316">
    <StackPanel>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Имя: "/>
            <TextBlock x:Name="EmpName"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment ="Center">
            <Button Content="Start" Name="Start" Click="Start_Click" Margin="10" />
            <Button Content="Pause" Name="Pause" Click="Pause_Click" Margin="10"/>
            <Button Content="Resume" Name="Resume" Click="Resume_Click" Margin="10"/>
            <Button Content="End" Name="End" Click="End_Click" Margin="10"/>
        </StackPanel>
        <StackPanel>
            <TextBox x:Name="ManagerName"/>
            <Button Content="Add manager" Name="addManager" Click="AddManager_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
